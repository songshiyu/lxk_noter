<view class="container">
    <view class="header">
        <v-epsoide class="epsoide" index="{{first.index}}"></v-epsoide>
        <v-like class="like" bind:like="onLike" like="{{first.like_status}}" count="{{first.fav_nums}}" />
    </view>

    <v-content content="{{first.content}}" img="{{first.image}}"></v-content>
    <v-navi title="{{first.title}}" latest="{{latest}}"  first="{{first}}" class="navi"></v-navi>
</view>